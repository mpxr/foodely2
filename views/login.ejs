<%- include('header', {active: "login"}) %>

<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <h1>Bejelentkezés</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <% if(data){ %>
            <%= data %>
            <% } %>
            <form action="/login" method="post">
                <div class="form-group">
                    <div class="row">
                        <div class="form-group col-lg-6">
                            <label for="exampleInputEmail1">Felhasználónév</label>
                            <input type="text" class="form-control" placeholder="Felhasználónév" name="username">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="form-group col-lg-6">
                            <label for="exampleInputPassword1">Jelszó</label>
                            <input type="password" class="form-control" placeholder="Jelszó" name="password">
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Mehet</button>
            </form>
        </div>
    </div>
</div>

<%- include('footer') %>